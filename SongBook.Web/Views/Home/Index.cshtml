@model SongsViewModel

<a href="/roll">⚂</a>
<table>
    @for (int i = 0; i < Model.Songs.Count; ++i)
    {
        Song song = Model.Songs[i];
        int num = i + 1;
        <tr>
            <td>
                @{
                    if (num != Model.Data.LearningSongId)
                    {
                        <a href="/learn?id=@num">♮</a>
                    }
                }
            </td>
            <td>
                @{
                    if (num == Model.Data.LearningSongId)
                    {
                        <text>♮</text>
                    }
                    else if (num == Model.Data.LastOrderedSongId)
                    {
                        <text>♪</text>
                    }
                    else if (num == Model.Data.RandomSongId)
                    {
                        <text>♫</text>
                    }
                }
            </td>
            <td>
                <a href="/song?id=@i">@song.Author — @song.Name</a>
            </td>
        </tr>
    }
</table>
<a href="https://yousician.com/guitartuna" target="_blank">🎸</a>